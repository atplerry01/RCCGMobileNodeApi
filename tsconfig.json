{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "types": [
         "node"
       ]
   },
   "include": [
      "src",
      "src/**/*.ts",
      "@types/**/*.d.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}